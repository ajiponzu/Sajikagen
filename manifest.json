{
    "name": "Sajikagen",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "e-kagen",
    "icons": {
        "48": "Icon48.png",
        "128": "Icon128.png"
    },
    "browser_action": {
        "default_title": "音声認識開始",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "recognize.js"
            ],
            "match_about_blank": true,
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}